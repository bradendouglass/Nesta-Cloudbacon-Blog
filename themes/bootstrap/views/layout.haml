!!!
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %meta{name: 'description', content: @description || "Silent ramblings of a journeyman programmer, humorist, card shark and purveyor of immitation squid. Delicious responses only." }
    %meta{name: 'keywords', content: @keywords || "ruby, javascript, vim, getting shit down, programming"}
    %meta{name: 'google-site-verification', content: 'SBXXrnW2v5Elw-cI3bPH80gzqH0kYjLruN0e3zHlNYg'}
    %link{href: 'http://fonts.googleapis.com/css?family=Questrial', rel: 'stylesheet', type: 'text/css'}
    %link{href: 'http://fonts.googleapis.com/css?family=Sanchez:400italic,400', rel: 'stylesheet', type: 'text/css'}
    %link{href: '/components/main.css', media: 'screen', rel: 'stylesheet'}
    %link{href: '/components/foundation-icons/foundation-icons.css', media: 'screen', rel: 'stylesheet'}
    %link{href: '/articles.xml', rel: 'alternative', type: "application/atom+xml"}
    %script{src: '/components/modernizr/modernizr.js'}

    %meta{name:"twitter:card", content:"summary"}
    %meta{name:"twitter:description", content: @description || "Silent ramblings of a journeyman programmer, humorist, card shark and purveyor of immitation squid. Delicious responses only." }

    -if @page.abspath == '/'
      %title
        Cloudbacon a blog about everything...but mostly programming and awesome. From the mind of Braden Douglass
      %meta{name:"twitter:title", content:"Cloudbacon a blog about everything...but mostly programming and awesome. From the mind of Braden Douglass"}
    - elsif @page.abspath == '/bestof'
      %title
        The very best of what Cloudbacon and the world of Braden Douglass have to offer.
      %meta{name:"twitter:title", content:"Cloudbacon a blog about everything...but mostly programming and awesome. From the mind of Braden Douglass"}
    - else
      %title
        =@page.title
      %meta{name:"twitter:title", content: @page.title}
      %link{rel: "webmention", href: "https://webmention.herokuapp.com/api/webmention"}
  %body
    .container
      %header.centered-navigation
        .centered-navigation-wrapper
          %ul.centered-navigation-menu.show
            %li.nav-link
              %a{href: '/about'}
                about
            %li.nav-link
              %a{href: random_post_path}
                random
            %li.nav-link.logo
              %img{src: 'http://c522735.r35.cf2.rackcdn.com/cloud.png'}
              %a{href: '/bestof'}
                %img{src: 'http://c522735.r35.cf2.rackcdn.com/Bacon.png'}
            %li.nav-link.logo-text
              %a{href: '/'}
                - unless @page.abspath == '/'
                  %i.fi-rewind
                = Nesta::Config.title
            %li.nav-link
              %a{href: '/for-hire'}
                for-hire
            %li.nav-link
              %a{href: 'http://www.twitter.com/braidn'}
                other
            -# %li.nav-link.logo
            -#   %a{href: 'http://www.twitter.com/braidn'}
            -#     %img{src: 'http://www.pairprogramwith.me/badge.png', width: '100px'}

    .container
      = yield
      %footer
        = haml :footer, layout: false

    .analytics
      = haml :analytics, layout: false

    %script{src: '/components/jquery/jquery.min.js' }
    - if @page.date
      %script{id: "webmention-hosted"}
        :plain
          (function () {
            var sn = document.createElement("script"), s = document.getElementsByTagName("script")[0], url;
            url = document.querySelectorAll ? document.querySelectorAll("link[rel~=canonical]") : false;
            url = url && url[0] ? url[0].href : false;
            sn.type = "text/javascript"; sn.async = true;
            sn.src = "//webmention.herokuapp.com/api/embed?url=" + encodeURIComponent(url || window.location);
            s.parentNode.insertBefore(sn, s);
          }());
